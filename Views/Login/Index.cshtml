@model SignalR_chat.Models.UserModel
@{
    ViewData["Title"] = "Login";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mt-5">登入</h2>
            <form asp-controller="Login" asp-action="index" method="post" class="mt-3">
                <div class="form-group">
                    <label for="userID">帳號:</label>
                    <input type="text" class="form-control" id="userID" name="userID">
                </div>
                <div class="form-group">
                    <label for="password">密碼:</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <input type="hidden" class="form-control" id="userName" name="userName" value="defult">
                <button type="submit" class="btn btn-primary btn-block custom-margin">登入</button>
                <div asp-validation-summary="All" class="text-danger custom-margin"></div>
            </form>
            <hr class="custom-margin">
            <p class="text-center">未註冊帳戶？ <a asp-controller="Account" asp-action="Index">註冊</a></p>
        </div>
    </div>
</div>